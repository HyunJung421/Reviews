<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    // java파일 : MyReviewDetailActivity
    // 프로필, UserName
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_user_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="공쥬현정"
        android:textAlignment="center"
        android:textSize="22dp"/>


    // 작성한 코멘트창 나타내기
    <ImageButton
        android:id="@+id/mypage_review_detail_btn_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mypage_btn_comment_onclicked"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        style="?android:attr/borderlessButtonStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="7dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:orientation="vertical"
            android:layout_weight="1">
            // 영화 제목
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="겨울왕국2"
                android:textColor="#A8A6A8"
                android:textSize="20dp" />

            // 영화 포스터
            <ImageView
                android:layout_width="140dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/review_detail_movie4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            // 별점
            <RatingBar
                android:id="@+id/mypage_review_detail_ratingbar"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="0.5"
                android:layout_margin="15dp" />

            // 작성한 리뷰
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뮤비 퀄리티 대박!!!!!\n크리스토프 가수 데뷔하자^^"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    // 하단바
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#333333"
        android:layout_marginTop="56dp"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/underbar_home"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/underbar_home"
            android:background="#333333"/>
        <ImageButton
            android:id="@+id/underbar_social"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/underbar_social"
            android:background="#333333"/>
        <ImageButton
            android:id="@+id/underbar_mypage"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/underbar_mypage"
            android:background="#333333"/>

    </LinearLayout>
</LinearLayout>