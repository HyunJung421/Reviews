<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="703dp"
        android:orientation="vertical" >

        // java파일 : JoinActivity
        // 회원가입 페이지
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            // 회원가입
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="회원가입"
                android:textSize="28dp"
                android:textStyle="bold" />

            // 수평선
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                // 아이디 입력
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="아이디"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10" >

                    <EditText
                        android:id="@+id/join_input_id"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"/>

                    // 중복확인 버튼
                    <Button
                        android:id="@+id/join_btn_check"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="중복확인"
                        android:textStyle="bold"
                        android:background="@drawable/btn_blue_round"
                        style="?android:attr/borderlessButtonStyle" />

                </LinearLayout>

                // 비밀번호 입력
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="비밀번호"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/join_input_pw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

                // 비밀번호 확인
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="비밀번호 확인"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/join_input_pw_submit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:inputType="textPassword"/>

                // 이름
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="이름"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/join_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"/>

                // 휴대폰 번호
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="휴대폰 번호"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/join_input_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true" />

                // 회원가입 버튼
                <Button
                    android:id="@+id/join_btn_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@drawable/btn_blue_round"
                    android:text="회원가입"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>