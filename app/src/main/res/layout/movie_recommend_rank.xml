<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="703dp"
        android:orientation="vertical" >

        // 영화 추천 순위
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="영화 추천 순위"
            android:textSize="28dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            // 수평선
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="#D3D3D3" />
        </LinearLayout>

        // TOP3
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="TOP 3"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#90CAF9"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            // 영화 포스터
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/social_movie1"
                    android:src="@drawable/movie_recom1"
                    style="@style/movie_poster" />

                <ImageButton
                    android:id="@+id/social_movie2"
                    android:src="@drawable/movie_recom2"
                    style="@style/movie_poster" />

                <ImageButton
                    android:id="@+id/social_movie3"
                    android:src="@drawable/movie_recom3"
                    style="@style/movie_poster"/>
            </LinearLayout>

            // 영화 포스터 제목
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_info_title1"
                    android:text="1 어벤져스:\n 엔드게임"
                    style="@style/movie_title"/>

                <TextView
                    android:id="@+id/movie_info_title2"
                    android:text="2 타이타닉"
                    style="@style/movie_title"/>

                <TextView
                    android:id="@+id/movie_info_title3"
                    android:text="3 어벤져스:\n 인피니티 워"
                    style="@style/movie_title"/>
            </LinearLayout>

            // 영화에 대한 추천
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="35dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/unlike_left_image_customise" />

                    <TextView
                        android:id="@+id/number_recommendation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  9,857" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/unlike_left_image_customise" />

                    <TextView
                        android:id="@+id/number_recommendation2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  8,578" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/unlike_left_image_customise" />

                    <TextView
                        android:id="@+id/number_recommendation3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  7,999" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        // 리사이클러뷰
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/movie_recommend_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="vertical" />
    </LinearLayout>

    // 수평선
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#D3D3D3" />
    // 하단바
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#333333"
        android:gravity="center">

        <ImageButton
            android:id="@+id/underbar_home"
            android:src="@drawable/underbar_home"
            style="@style/under_bar" />
        // 수직선
        <View
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:background="#D3D3D3"/>
        <ImageButton
            android:id="@+id/underbar_social"
            android:src="@drawable/underbar_social"
            style="@style/under_bar" />
        // 수직선
        <View
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:background="#D3D3D3"/>
        <ImageButton
            android:id="@+id/underbar_mypage"
            android:src="@drawable/underbar_mypage"
            style="@style/under_bar" />
    </LinearLayout>
</LinearLayout>
