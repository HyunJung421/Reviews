<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    // Reviews 로고
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="REVIEWS"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#000000"/>

    // 영화 포스터 자동회전
    <ViewFlipper
        android:id="@+id/main_viewFlipper"
        android:layout_width="400dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_margin="10dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_view_movie1">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_view_movie2">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_view_movie3">
            </ImageView>
        </LinearLayout>
    </ViewFlipper>

    // 검색바
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/main_editSearch"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:hint=" Search"
            android:textSize="28dp"
            android:background="#90CAF9" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/main_icon_search"
            android:background="#90CAF9"/>
    </LinearLayout>

    // 영화평점순위, 영화추천순위, 영화신작
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/main_icon_star"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:src="@drawable/main_icon_star"
            android:background="#FFFFFF"/>

        <ImageButton
            android:id="@+id/main_icon_good"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:src="@drawable/main_icon_good" />

        <ImageButton
            android:id="@+id/main_icon_new"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:src="@drawable/main_icon_new" />
    </LinearLayout>

    // 영화예매사이트
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="5dp">
        <ImageButton
            android:id="@+id/main_btn_cgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/main_btn_cgv"
            android:background="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp">
        <ImageButton
            android:id="@+id/main_btn_mega"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/main_btn_mega"
            android:background="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp" >
        <ImageButton
            android:id="@+id/main_btn_lotte"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:src="@drawable/main_btn_lotte" />
    </LinearLayout>

    // 하단바
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#333333"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/underbar_home"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/underbar_home"
            android:background="#333333"/>
        <ImageButton
            android:id="@+id/underbar_social"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/underbar_social"
            android:background="#333333"/>
        <ImageButton
            android:id="@+id/underbar_mypage"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/underbar_mypage"
            android:background="#333333"/>
    </LinearLayout>
</LinearLayout>