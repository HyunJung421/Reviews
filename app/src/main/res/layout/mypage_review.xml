                                android:text=" | "
                                android:textSize="13dp" />
                            <TextView
                                android:id="@+id/movie_info_running_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="102"
                                android:textSize="13dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="분 | "
                                android:textSize="13dp" />
                            <TextView
                                android:id="@+id/movie_info_country2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미국"
                                android:textSize="13dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | "
                                android:textSize="13dp" />
                            <TextView
                                android:id="@+id/movie_info_genre2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="모험"
                                android:textSize="13dp" />
                        </LinearLayout>

                        // 평점
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/star_left_image_customise"
                            android:text=" 4.0"
                            android:textSize="13dp" />

                        // 내용
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="이걸 보고 누가 울어;;....흐어엉헝헝ㅠㅠ"
                            android:textColor="#000000"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
                // 추천 수
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/unlike_left_image_customise"
                    android:text=" 30"
                    android:textColor="#7C7979"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            // 리뷰3
            <LinearLayout
                style="@style/mypage_review_layout">

                // 내 정보
                <LinearLayout
                    android:layout_width="match_parent"
