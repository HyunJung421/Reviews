                        android:textColor="#000000"
                        android:textSize="15dp" />
                </LinearLayout>

                // 내가 작성한 리뷰
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    //영화 포스터
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/social_movie2" />

                    // 영화 정보
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        // 영화 제목
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="나의 첫번째 슈퍼스타"
                            android:textColor="#000000"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        // 상영년도 〮 상영시간 〮 국가 〮 장르
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/movie_info_year3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2020"
                                android:textSize="13dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | "
                                android:textSize="13dp" />
                            <TextView
                                android:id="@+id/movie_info_running_time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="113"
                                android:textSize="13dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="분 | "
                                android:textSize="13dp" />
                            <TextView
                                android:id="@+id/movie_info_country3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미국"
                                android:textSize="13dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | "
                                android:textSize="13dp" />
                            <TextView
                                android:id="@+id/movie_info_genre3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="코미디"
                                android:textSize="13dp" />
                        </LinearLayout>

                        // 평점
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/star_left_image_customise"
                            android:text=" 4.2"
                            android:textSize="13dp" />

                        // 내용
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="러닝타임 내내 귀호강했던 영화!"
                            android:textColor="#000000"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
                // 추천 수
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/unlike_left_image_customise"
                    android:text=" 11"
                    android:textColor="#7C7979"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    // 하단바
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#333333"
        android:gravity="center">

        <ImageButton
            android:id="@+id/underbar_home"
            android:src="@drawable/underbar_home"
            style="@style/under_bar"/>

        <ImageButton
            android:id="@+id/underbar_social"
            android:src="@drawable/underbar_social"
            style="@style/under_bar"/>

        <ImageButton
            android:id="@+id/underbar_mypage"
            android:src="@drawable/underbar_mypage"
            style="@style/under_bar"/>
    </LinearLayout>
</LinearLayout>