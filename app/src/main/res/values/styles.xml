<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 하단바 -->
    <style name="under_bar" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">137dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- 더보기 -->
    <style name="btn_more" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">#ffffff</item>
        <item name="android:text">+더보기</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 영화 포스터 -->
    <style name="movie_poster" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- 영화 제목 -->
    <style name="movie_title">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- mypage_review.xml 레이아웃 -->
    <style name="mypage_review_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/my_review_border</item>
    </style>

    <style name="image_attach">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- 아이콘 크키 -->
    <style name="people_icon"
        parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- mypage_content.xml 레이아웃 -->
    <style name="mypage_content_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/my_review_border</item>
    </style>

</resources>
